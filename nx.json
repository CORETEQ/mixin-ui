{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": ["default"],
    "sharedGlobals": []
  },
  "release": {
    "projects": ["cdk", "kit", "cli"],
    "releaseTagPattern": "v{version}",
    "changelog": {
      "automaticFromRef": true,
      "workspaceChangelog": {
        "renderOptions": {
          "authors": false
        },
        "createRelease": "github"
      }
    },
    "conventionalCommits": {
      "docs": {
        "semverBump": "none",
        "changelog": {
          "title": "ðŸ“š Documentation",
          "hidden": true
        }
      },
      "style": {
        "semverBump": "none",
        "changelog": {
          "hidden": true
        }
      },
      "refactor": {
        "semverBump": "none",
        "changelog": {
          "hidden": true
        }
      },
      "test": {
        "semverBump": "none",
        "changelog": {
          "hidden": true
        }
      },
      "chore": {
        "semverBump": "none",
        "changelog": {
          "hidden": true
        }
      }
    }
  },
  "targetDefaults": {
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/libs/{projectName}"
      }
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    },
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    }
  ]
}

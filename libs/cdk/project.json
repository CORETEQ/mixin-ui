{
  "name": "cdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/{projectName}",
  "prefix": "x",
  "projectType": "library",
  "targets": {
    "package": {
      "executor": "@angular-devkit/build-angular:ng-packagr",
      "options": {
        "tsConfig": "tsconfig.prod.json",
        "project": "{projectRoot}/ng-package.json"
      },
      "dependsOn": [
        {
          "target": "build",
          "params": "ignore",
          "dependencies": true
        }
      ]
    },
    "schematics": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p ./{projectRoot}/schematics/tsconfig.schematics.json"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/libs/{projectRoot}"],
      "options": {
        "commands": ["nx package {projectName}", "nx schematics {projectName}"],
        "parallel": false
      }
    }
  }
}
